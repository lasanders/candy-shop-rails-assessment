        <% if current_user.employee %>
          <li><%= link_to "#{candy.name} Details", candy_path(candy) %></li><br>
        <% else %>
          <%= link_to "Purchase #{candy.name}", candy_path(candy) %><br>
        <% end %>
    <% end %>
<% end %>
